<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    app:umanoDragView="@id/slide_layout"
    android:background="@drawable/camp_donm_default2"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you are here"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3sp"
        android:text="부산광역시"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
         />
</LinearLayout>
    <ImageView
        android:id="@+id/btnlogin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginLeft="300dp"
        android:src="@mipmap/ic_launcher_foreground" />
</RelativeLayout>


        <!--   버튼 영역     -->


        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="410dp"
            android:layout_height="800dp"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:textSize="20dp"

                />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


                <!--       캠핑장        -->
    <ImageView
        android:id="@+id/btnmenu1"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/camp2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnmenu1"
        android:layout_alignTop="@+id/btnmenu1"
        android:layout_alignRight="@+id/btnmenu1"
        android:layout_alignBottom="@+id/btnmenu1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-34dp"
        android:layout_marginTop="-43dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="43dp"
        android:gravity="center"
        android:letterSpacing="0.04"
        android:paddingLeft="20dp"
        android:text="캠핑장"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="sans" />
</RelativeLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <!--       예약        -->
                <ImageView
                    android:id="@+id/btnmenu2"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/reservation1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/btnmenu2"
                        android:layout_alignTop="@+id/btnmenu2"
                        android:layout_alignRight="@+id/btnmenu2"
                        android:layout_alignBottom="@+id/btnmenu2"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="-29dp"
                        android:layout_marginTop="-41dp"
                        android:layout_marginRight="29dp"
                        android:layout_marginBottom="41dp"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:paddingLeft="20dp"
                        android:text="예약"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:typeface="sans" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="280dp"
                android:layout_height="120dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!--       커뮤니티        -->

                    <ImageView
                        android:id="@+id/btnmenu3"
                        android:layout_width="280dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/comm1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/btnmenu3"
                        android:layout_alignTop="@+id/btnmenu3"
                        android:layout_alignRight="@+id/btnmenu3"
                        android:layout_alignBottom="@+id/btnmenu3"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="-81dp"
                        android:layout_marginTop="-13dp"
                        android:layout_marginRight="81dp"
                        android:layout_marginBottom="13dp"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:paddingLeft="20dp"
                        android:text="커뮤니티"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:typeface="sans" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="280dp"
                android:layout_height="120dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!--       축제        -->
                <ImageView
                    android:id="@+id/btnmenu4"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tour1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/btnmenu4"
                        android:layout_alignTop="@+id/btnmenu4"
                        android:layout_alignRight="@+id/btnmenu4"
                        android:layout_alignBottom="@+id/btnmenu4"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="-88dp"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="88dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:paddingLeft="20dp"
                        android:text="축제"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:typeface="sans" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView><!--    2번째 줄    -->


