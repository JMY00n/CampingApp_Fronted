<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    app:umanoDragView="@id/slide_layout"
    android:background="@drawable/camp_donm_default2"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you are here"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3sp"
        android:text="부산광역시"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
         />
</LinearLayout>
    <ImageView
        android:id="@+id/btnlogin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginLeft="300dp"
        android:src="@mipmap/ic_launcher_foreground" />
</RelativeLayout>


        <!--   버튼 영역     -->

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="410dp"
            android:layout_height="800dp"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp">

                <!--       캠핑장        -->
                <ImageView
                    android:id="@+id/btnmenu1"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camp2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp">

                <!--       예약        -->
                <ImageView
                    android:id="@+id/btnmenu2"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/reservation1" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="280dp"
                android:layout_height="120dp"
                app:cardCornerRadius="20dp">

                <!--       커뮤니티        -->
                <ImageView
                    android:id="@+id/btnmenu3"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/comm1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="280dp"
                android:layout_height="120dp"
                app:cardCornerRadius="20dp">

                <!--       축제        -->
                <ImageView
                    android:id="@+id/btnmenu4"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tour1" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView><!--    2번째 줄    -->


