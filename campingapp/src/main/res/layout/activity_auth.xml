<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/authMainTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00BCD4"
        android:text="로그아웃"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />


<!--이메일-->
    <EditText
        android:id="@+id/authEmailEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:visibility="visible" />


<!--    비밀번호-->
    <EditText
        android:id="@+id/authPasswordEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="비밀번호 - 6자 이상"
        android:inputType="textPassword"
        android:visibility="visible" />


<!--    이름-->
    <EditText
        android:id="@+id/authUsernameEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="이름"
        android:inputType="text"
        android:visibility="visible" />
    <EditText
        android:id="@+id/authHostUsernameEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="이름"
        android:inputType="text"
        android:visibility="visible" />

<!--    주소-->
    <EditText
        android:id="@+id/authAddressEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="주소"
        android:inputType="text"
        android:visibility="visible" />

<!--    전화번호-->
    <EditText
        android:id="@+id/authTelEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="전화번호"
        android:inputType="text"
        android:visibility="visible" />

    <EditText
        android:id="@+id/authHostTelEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="전화번호"
        android:inputType="text"
        android:visibility="visible" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#00BCD4"
        android:text="로그인"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/goSignInBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F44336"
        android:text="이메일 가입"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/goHostSignBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F44336"
        android:text="호스트 가입"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00BCD4"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/com_facebook_button_background_color"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/signBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00BCD4"
        android:text="가입"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/hostSignBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00BCD4"
        android:text="호스트 가입"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>

