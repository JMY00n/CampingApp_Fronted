<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    app:umanoDragView="@id/slide_layout"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/oc">


        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B3000000"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/sans_light"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="   님"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.108" />

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B3000000"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/sans_light"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="환영합니다"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.423"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.297" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/slide_layout"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:background="@drawable/navermap_default_ground_overlay_image">

        <Button
            android:id="@+id/btn_toggle"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--   하단 구간    -->

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="20dp">

                <!--       캠핑장        -->
                <ImageView
                    android:id="@+id/btnmenu1"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camp2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="40dp"
                app:cardCornerRadius="20dp">

                <!--       예약        -->
                <ImageView
                    android:id="@+id/btnmenu2"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/reservation1" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <!--    2번째 줄    -->
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="20dp">

                <!--       커뮤니티        -->
                <ImageView
                    android:id="@+id/btnmenu3"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/comm1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="20dp">

                <!--       축제        -->
                <ImageView
                    android:id="@+id/btnmenu4"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tour1" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>